
name : appropriate_branch_{{name}}

on :
  pull_request_target :
    branches :
      {{branches}}

jobs :

  appropriate_branch :
    uses : {{username_and_repository}}/.github/workflows/appropriate_branch.yml@{{uses_branch}}
    with :
      src_branch : '{{src_branch}}'
      dst_branch : '$\{{ github.base_ref }}'
    secrets :
      PRIVATE_GITHUB_BOT_TOKEN : '$\{{ secrets.PRIVATE_GITHUB_BOT_TOKEN }}'
